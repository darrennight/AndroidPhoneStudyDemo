<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>
    </style>

    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <item name="llEmptyImage">@mipmap/empty</item>
        <item name="llErrorImage">@mipmap/error</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Theme.Center" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_icon</item>
    </style>



    <style name="MainBtn" parent="MatchWrap">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="SwipeItemBtn" parent="AutoWrap">
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SwipeItemSIL" parent="MatchWrap">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#38D369</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="BottomViewDelete" parent="WrapMatch">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#f00</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:src">@mipmap/delete</item>
    </style>

    <style name="TopViewRoot" parent="MatchWrap.Horizontal">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#9674FC</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TopViewAvatar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@mipmap/avator</item>
    </style>

    <style name="TopViewDesc" parent="MatchWrap">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="testStatusBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>



    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">2.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/video_seekbar_style</item>
        <item name="android:minHeight">1.0dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0.0dip</item>
    </style>


    <style name="video_progress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/white_progress_bar</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>




    <style name="TextBox" parent="TextAppearance.AppCompat.Body1">
        <!--<item name="android:layout_marginStart">@dimen/half_margin</item>
        <item name="android:layout_marginEnd">@dimen/half_margin</item>-->
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/half_margin</item>
    </style>


    <style name="CafeBarRippleStyle">
        <item name="colorControlHighlight">@color/cafebar_action_button_ripple</item>
    </style>

    <style name="CafeBarRippleStyleDark">
        <item name="colorControlHighlight">@color/cafebar_action_button_ripple_dark</item>
    </style>


    <style name="stfContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="stfProgress">
        <item name="android:layout_width">@dimen/stfProgressSize</item>
        <item name="android:layout_height">@dimen/stfProgressSize</item>
    </style>

    <style name="stfImage">
        <item name="android:layout_width">@dimen/stfImageSize</item>
        <item name="android:layout_height">@dimen/stfImageSize</item>
        <item name="android:tint">@color/stfImageColor</item>
    </style>

    <style name="stfMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="stfButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>



    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_height">?attr/actionBarSize</item>-->
        <item name="android:layout_height">45dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/PopWindowStyle</item>
    </style>

    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/grey</item>
    </style>
    <style name="RecyclerItemViewStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>



    <style name="custom_dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="pickerview_dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/pickerview_dialog_scale_out</item>
    </style>


    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="SubDialogStyle" parent="android:Theme.Holo.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NoDimDialogFragmentStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="j_timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/j_anim_enter_bottom</item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/j_anim_exit_bottom</item> <!-- 指定消失的动画xml -->
    </style>

</resources>
