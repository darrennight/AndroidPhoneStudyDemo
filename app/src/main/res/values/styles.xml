<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>
    </style>

    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <item name="llEmptyImage">@mipmap/empty</item>
        <item name="llErrorImage">@mipmap/error</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>




    <style name="MainBtn" parent="MatchWrap">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="SwipeItemBtn" parent="AutoWrap">
        <item name="android:onClick">onClick</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SwipeItemSIL" parent="MatchWrap">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#38D369</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="BottomViewDelete" parent="WrapMatch">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#f00</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:src">@mipmap/delete</item>
    </style>

    <style name="TopViewRoot" parent="MatchWrap.Horizontal">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#9674FC</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TopViewAvatar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@mipmap/avator</item>
    </style>

    <style name="TopViewDesc" parent="MatchWrap">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="testStatusBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>



    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">2.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/video_seekbar_style</item>
        <item name="android:minHeight">1.0dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">0.0dip</item>
    </style>


    <style name="video_progress_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/white_progress_bar</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>




    <style name="TextBox" parent="TextAppearance.AppCompat.Body1">
        <!--<item name="android:layout_marginStart">@dimen/half_margin</item>
        <item name="android:layout_marginEnd">@dimen/half_margin</item>-->
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/half_margin</item>
    </style>

</resources>
