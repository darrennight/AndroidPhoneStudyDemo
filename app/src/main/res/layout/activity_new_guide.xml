<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_container"
        >

        <Button
            android:id="@+id/btn_show_known_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showKnownTipView"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:text="showKnownTip" />
        <Button
            android:id="@+id/btn_show_next_known_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showNextKnownTipView"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:text="showNextKnownTip"
            android:layout_below="@id/btn_show_known_tip"/>

        <Button
            android:id="@+id/btn_show_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showTipView"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:text="showTip" />
        <Button
            android:id="@+id/btn_show_next_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showNextTipView"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:text="showNextTip"
            android:layout_below="@id/btn_show_tip"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/entities"
            android:layout_below="@id/btn_show_next_known_tip"/>
        <Button
            android:id="@+id/btn_light"
            android:layout_marginTop="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="高亮按钮" />


        <Button
            android:id="@+id/btn_rightLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_alignParentRight="true"
            android:text="高亮按钮1" />


        <Button
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_bottomLight"
            android:layout_marginBottom="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="高亮按钮2" />


    </RelativeLayout>